@model zoo_website.Models.Animal

@{
    ViewData["Title"] = "Edit Animal";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Edit Animal</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Lifespan" class="form-label fw-bold"></label>
                    <input asp-for="Lifespan" class="form-control" />
                    <span asp-validation-for="Lifespan" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Diet" class="form-label fw-bold"></label>
                    <input asp-for="Diet" class="form-control" />
                    <span asp-validation-for="Diet" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Habitat" class="form-label fw-bold"></label>
                    <input asp-for="Habitat" class="form-control" />
                    <span asp-validation-for="Habitat" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImagePath" class="form-label fw-bold"></label>
                    <input asp-for="ImagePath" class="form-control" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>

                @* Eğer resim yolu varsa resmi göster *@
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mb-3 text-center">
                        <label class="form-label fw-bold">Current Image:</label><br />
                        <img src="@Model.ImagePath" alt="@Model.Name" class="img-thumbnail" style="max-height: 250px;" />
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
