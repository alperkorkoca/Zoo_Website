@model List<zoo_website.Models.Animal>

<div class="container my-5">
    <h2 class="text-center mb-4">Animals</h2>
    <div class="row">
        @foreach (var animal in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm h-100 border-0 position-relative">
                    <!-- Resim -->
                    <div class="position-relative">
                        <img src="@animal.ImagePath" alt="@animal.Name" class="card-img-top" style="height: 250px; object-fit: cover; " />
                        
                        <!-- Hayvan Adı Sol Üstte -->
                        <div class="position-absolute top-0 start-0 bg-dark bg-opacity-50 text-white px-3 py-2 rounded-bottom-end">
                            <strong>@animal.Name</strong>
                        </div>
                    </div>

                    <!-- Butonlar -->
                    <div class="card-footer bg-dark d-flex justify-content-between align-items-center px-3 py-2">
    <a asp-action="Details" asp-route-id="@animal.Id" class="btn btn-sm btn-outline-light">
        <i class="bi bi-eye"></i> Details
    </a>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@animal.Id" class="btn btn-sm btn-outline-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@animal.Id" class="btn btn-sm btn-outline-danger"
           onclick="return confirm('Are you sure you want to delete this animal?');">
            <i class="bi bi-trash"></i> Delete
        </a>
    </div>
</div>

                </div>
            </div>
        }
    </div>
</div>
