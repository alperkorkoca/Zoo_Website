@model zoo_website.Models.Animal

@{
    ViewData["Title"] = "Delete Animal";
}

<div class="container mt-5">
    <div class="card border-danger shadow-lg">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Animal</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this animal?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Habitat:</dt>
                <dd class="col-sm-9">@Model.Habitat</dd>

                <dt class="col-sm-3">Diet:</dt>
                <dd class="col-sm-9">@Model.Diet</dd>

                <dt class="col-sm-3">Lifespan:</dt>
                <dd class="col-sm-9">@Model.Lifespan</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
